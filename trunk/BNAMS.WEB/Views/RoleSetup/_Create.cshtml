
<div class="panel panel-primary dialog-panel">
    <div class="panel-heading">
        <h5>Role Create</h5>
    </div>


    <input type="text" id="hdnRoleId" hidden="" value="0" />

    <div class="panel-body">
        <form class="form-horizontal" role="form" style="margin-left: 10px">
            <div class="row">



                <div class="form-group">
                    <label class="col-md-4 control-label">
                        Role Name
                    </label>
                    <div class="col-md-8">
                        <input type="text"  id="txtRoleName" class="form-control" placeholder="Enter Role Name">
                    </div>
                </div>


                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="chkIsActive">
                    <label class="form-check-label">
                        Is Active
                    </label>
                </div>



            </div>

            <div class="form-actions right1">
                <button type="button" id="btnSubmit" class="btn btn-primary">
                    Save
                </button>
                <button type="button" id="btnCancel" class="btn btn-danger">
                    Reset
                </button>

            </div>


        </form>
    </div>
</div>
