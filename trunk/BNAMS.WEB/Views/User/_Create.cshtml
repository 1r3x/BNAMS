                        </div>
                    </div>


                </div>


                @*for image upload*@

                <div class="col-sm-12 col-md-4 col-lg-4">
                    <div class="form-group">
                        <input type='file' id="getFile" onchange="readURL(this);" style="display: none" />
                        <img style="max-width: 180px;" id="blah" src="http://placehold.it/180" alt="your image" />
                        <button type="button" style="display: block; width: 120px; height: 30px; margin-top: 10px" onclick="document.getElementById('getFile').click()">Add Photo</button>
