
<h3>Menu Create</h3>


<input type="text" id="hdnMenuId" hidden="" value="0" />

<div class="portlet-body form">
    <form class="form-horizontal" role="form">
        <div class="form-body">
            
            
            <div class="form-group">
                <label class="col-md-4 control-label">
                    Parent Menu
                </label>
                <div class="col-md-8">
                    <select class="form-control" id="ddlParentMenu">
                        <option></option>
                    </select>
                </div>
            </div>
            
            

            <div class="form-group">
                <label class="col-md-4 control-label">
                    Menu Name
                </label>
                <div class="col-md-8">
                    <input type="text" id="txtMenuName" class="form-control" placeholder="Menu Input">
                </div>
            </div>
            


            <div class="form-group">
                <label class="col-md-4 control-label">
                    Menu Class
                </label>
                <div class="col-md-8">
                    <input type="text" id="txtMenuClass" class="form-control" placeholder="Menu Class Input">
                </div>
            </div>
            
            

            <div class="form-group">
                <label class="col-md-4 control-label">
                    Menu ID
                </label>
                <div class="col-md-8">
                    <input type="text" id="txtMenuId" class="form-control" placeholder="Menu ID Input">
                </div>
            </div>
            
            

            <div class="form-group">
                <label class="col-md-4 control-label">
                    Menu URL
                </label>
                <div class="col-md-8">
                    <input type="text" id="txtMenuURL" class="form-control" placeholder="Menu URL Input">
                </div>
            </div>
            
            
            

            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="chkIsActive">
                <label class="form-check-label">
                    Is Active
                </label>
            </div>

            

        </div>
        <div class="form-actions right1">
            <button type="button"  id="btnCancel" class="btn default">
                Cancel
            </button>
            <button type="button" id="btnSubmit" class="btn blue">
                Save
            </button>
        </div>

    </form>
</div>